
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the catalog.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "storeId": { "type": "string" },
        "subCategoryId": { "type": "string" },
        "unit": { "type": "string" },
        "subUnit": { "type": "string" },
        "subUnitQuantity": { "type": "number" },
        "subUnitPrice": { "type": "number" },
        "priceHistory": {
          "type": "array",
          "items": { "$ref": "#/entities/PriceHistory" }
        }
      },
      "required": ["id", "name", "price", "imageUrl", "storeId", "subCategoryId", "unit"]
    },
    "PriceHistory": {
      "title": "PriceHistory",
      "type": "object",
      "description": "Represents a record of a product's price at a specific time.",
      "properties": {
        "price": { "type": "number" },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["price", "date"]
    },
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a category of products.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "storeId": { "type": "string" },
        "parentId": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "name", "storeId"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a customer's user profile.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "purchaseHistory": { "type": "string" },
        "stars": { 
          "type": "number",
          "description": "User rating from 1 to 5.",
          "minimum": 1,
          "maximum": 5
        }
      },
      "required": ["id", "name", "phone"]
    },
    "Invoice": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Invoice",
      "type": "object",
      "description": "Represents an invoice.",
      "properties": {
        "id": { "type": "string" },
        "customerId": { "type": "string" },
        "customerName": { "type": "string" },
        "customerEmail": { "type": "string" },
        "invoiceNumber": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["Paid", "Pending", "Overdue"] },
        "items": { 
          "type": "array",
          "items": { "$ref": "#/entities/InvoiceItem" }
        },
        "subtotal": { "type": "number" },
        "discount": { "type": "number" },
        "additions": { "type": "number" },
        "tax": { "type": "number" },
        "total": { "type": "number" },
        "description": { "type": "string" }
      },
      "required": ["id", "customerId", "invoiceNumber", "date", "status", "items", "total"]
    },
    "InvoiceItem": {
      "title": "InvoiceItem",
      "type": "object",
      "properties": {
        "productId": { "type": "string" },
        "productName": { "type": "string" },
        "quantity": { "type": "number" },
        "unitPrice": { "type": "number" },
        "totalPrice": { "type": "number" },
        "unit": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" }
      },
      "required": ["productId", "productName", "quantity", "unitPrice", "totalPrice", "unit"]
    },
    "Store": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Store",
      "type": "object",
      "description": "Represents a user's store.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "address": { "type": "string" },
        "phone": { "type": "string" },
        "logoUrl": { "type": "string", "format": "uri" },
        "bankAccountHolder": { "type": "string" },
        "bankName": { "type": "string" },
        "bankAccountNumber": { "type": "string" },
        "bankIban": { "type": "string" },
        "bankCardNumber": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "Unit": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Unit",
      "type": "object",
      "description": "Represents a unit of measurement.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "defaultQuantity": { "type": "number" }
      },
      "required": ["id", "name", "defaultQuantity"]
    },
    "ToolbarSettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ToolbarSettings",
      "type": "object",
      "description": "Stores positions of floating toolbars.",
      "properties": {}
    },
    "VisitorLog": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "VisitorLog",
        "type": "object",
        "description": "Logs a visit to the application.",
        "properties": {
            "id": { "type": "string" },
            "userId": { "type": "string", "description": "ID of the logged-in user, if any." },
            "ipAddress": { "type": "string", "format": "ipv4" },
            "userAgent": { "type": "string" },
            "screenResolution": { "type": "string", "pattern": "^\\d+x\\d+$" },
            "startTime": { "type": "string", "format": "date-time" },
            "endTime": { "type": "string", "format": "date-time" },
            "duration": { "type": "number", "description": "Session duration in seconds." }
        },
        "required": ["id", "ipAddress", "userAgent", "startTime"]
    }
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}/stores/{storeId}",
        "schema": { "$ref": "#/entities/Store" },
        "description": "User-specific collection of stores."
      },
      {
        "path": "/users/{userId}/products/{productId}",
        "schema": { "$ref": "#/entities/Product" },
        "description": "User-specific collection of products."
      },
      {
        "path": "/users/{userId}/products/{productId}/priceHistory/{priceHistoryId}",
        "schema": { "$ref": "#/entities/PriceHistory" },
        "description": "Price history for a specific product."
      },
      {
        "path": "/users/{userId}/categories/{categoryId}",
        "schema": { "$ref": "#/entities/Category" },
        "description": "User-specific collection of categories."
      },
      {
        "path": "/users/{userId}/userProfiles/{profileId}",
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "User-specific collection of user profiles."
      },
      {
        "path": "/users/{userId}/invoices/{invoiceId}",
        "schema": { "$ref": "#/entities/Invoice" },
        "description": "User-specific collection of invoices."
      },
      {
        "path": "/users/{userId}/units/{unitId}",
        "schema": { "$ref": "#/entities/Unit" },
        "description": "User-specific collection of measurement units."
      },
      {
        "path": "/users/{userId}/settings/toolbarPositions",
        "schema": { "$ref": "#/entities/ToolbarSettings" },
        "description": "Stores settings for a user, like toolbar positions."
      },
      {
        "path": "/visitorLogs/{logId}",
        "schema": { "$ref": "#/entities/VisitorLog" },
        "description": "Collection of all visitor sessions."
      }
    ]
  },
  "auth": {
    "providers": ["password", "google.com"]
  }
}
