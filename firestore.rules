rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isStoreOwner(storeId) {
      return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId;
    }
    
    function isBatchWrite() {
      return request.resource == null;
    }

    // --- Public Collections Rules ---
    match /stores/{storeId} {
      allow read: if true;
      allow create: if isBatchWrite() || (isSignedIn() && request.resource.data.ownerId == request.auth.uid);
      allow update: if isBatchWrite() || isStoreOwner(storeId);
      allow delete: if isBatchWrite() || isStoreOwner(storeId);
    }
    
    match /products/{productId} {
      allow read: if true;
      allow create: if isBatchWrite() || isStoreOwner(request.resource.data.storeId);
      allow update: if isBatchWrite() || isStoreOwner(resource.data.storeId);
      allow delete: if isBatchWrite() || isStoreOwner(resource.data.storeId);
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow create: if isBatchWrite() || isStoreOwner(request.resource.data.storeId);
      allow update: if isBatchWrite() || isStoreOwner(resource.data.storeId);
      allow delete: if isBatchWrite() || isStoreOwner(resource.data.storeId);
    }


    // --- User-Private Subcollections Rules ---
    
    // Clients
    match /users/{userId}/clients/{clientId} {
      allow read, list: if isSignedIn() && isOwner(userId);
      allow create: if isBatchWrite() || (isSignedIn() && isOwner(userId));
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isBatchWrite() || (isSignedIn() && isOwner(userId));
    }

    // Invoices
    match /users/{userId}/invoices/{invoiceId} {
      allow read, list: if isSignedIn() && isOwner(userId);
      allow create: if isBatchWrite() || (isSignedIn() && isOwner(userId));
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isBatchWrite() || (isSignedIn() && isOwner(userId));
    }

    // Units
    match /users/{userId}/units/{unitId} {
      allow read, list: if isSignedIn() && isOwner(userId);
      allow create: if isBatchWrite() || (isSignedIn() && isOwner(userId));
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isBatchWrite() || (isSignedIn() && isOwner(userId));
    }

    // Toolbar settings
    match /users/{userId}/settings/toolbarPositions {
      allow read, list: if isSignedIn() && isOwner(userId);
      allow create: if isBatchWrite() || (isSignedIn() && isOwner(userId));
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isBatchWrite() || (isSignedIn() && isOwner(userId));
    }
    
    match /users/{userId} {
        allow read, write: if isOwner(userId);
    }

  }
}
