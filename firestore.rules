rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Checks if the user is the owner of the store associated with a product or category.
    function isStoreOwner(storeId) {
      return request.auth.uid == get(/databases/$(database)/documents/stores/$(storeId)).data.ownerId;
    }
    
    // Checks if the write is part of a batch operation.
    function isBatchWrite() {
      return request.method in ['create', 'update', 'delete'] && request.resource == null;
    }

    // Public collections (readable by all)
    match /stores/{storeId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && isStoreOwner(storeId);
    }

    match /products/{productId} {
      allow read: if true;
      allow create: if isSignedIn() && isStoreOwner(request.resource.data.storeId);
      allow update, delete: if isSignedIn() && isStoreOwner(resource.data.storeId);
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow create: if isSignedIn() && isStoreOwner(request.resource.data.storeId);
      allow update, delete: if isSignedIn() && isStoreOwner(resource.data.storeId);
    }
    
    // User-specific private collections
    match /users/{userId} {
      // General access rule: Only the owner can access their own data.
      allow read, write: if isOwner(userId);
      
      // Units collection for each user
      match /units/{unitId} {
         allow read, write: if isOwner(userId);
      }
      
      // Clients collection for each user
      match /clients/{clientId} {
         allow read, write: if isOwner(userId);
      }
      
      // Invoices collection for each user
      match /invoices/{invoiceId} {
        allow read, write: if isOwner(userId);
      }
      
      // Settings sub-collection
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
