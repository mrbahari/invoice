rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Match all collections under the /users/{userId} path
    match /users/{userId}/{collection}/{docId} {
      // Allow read access to all collections if the user is signed in.
      // This covers stores, products, categories, clients, invoices, etc.
      allow read: if isSignedIn();
      
      // Allow the owner to create, update, and delete their own documents.
      allow write: if isOwner(userId);
    }
  }
}
